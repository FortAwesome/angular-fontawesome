{
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "fullTemplateTypeCheck": true
    },
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "mapRoot": "./",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "files": [
        "./src/index.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    }
}
